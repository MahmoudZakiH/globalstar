<odoo>
    <data>

        <record id="view_account_form_global_inherit" model="ir.ui.view">
            <field name="name">view_account_form.global.inherit</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='allowed_journal_ids']" position="after">
                    <field name="customer_discount"/>
                </xpath>

            </field>
        </record>

        <record id="view_partner_form_global" model="ir.ui.view">
            <field name="name">view_partner_form_global</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="c_r"/>
                    <field name="contact_person_id"/>
                    <field name="invoice_percentage"/>
                </xpath>

                <xpath expr="//span[@name='address_name']" position="before">
                    <field name="nickname"/>
                </xpath>

            </field>
        </record>

        <record id="res_partner_search_global" model="ir.ui.view">
            <field name="name">res.partner.search.global</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='parent_id']" position="before">
                    <field name="nickname"/>
                </xpath>
            </field>
        </record>

        <record id="sale_order_global_inherit" model="ir.ui.view">
            <field name="name">Sale Order GlobalStar</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_confirm'][1]" position="attributes">
                    <attribute name="groups">globalstar_customization.group_confirm_order_globalstar</attribute>
                </xpath>
                <xpath expr="//button[@name='action_confirm'][2]" position="attributes">
                    <attribute name="groups">globalstar_customization.group_confirm_order_globalstar</attribute>
                </xpath>
            </field>
        </record>

        <record id="stock_scrap_form_view_global" model="ir.ui.view">
            <field name="name">stock_scrap_form_view.global</field>
            <field name="model">stock.scrap</field>
            <field name="inherit_id" ref="stock.stock_scrap_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_validate']" position="attributes">
                    <attribute name="groups">globalstar_customization.group_confirm_scrap_globalstar</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_stock_quant_tree_inventory_editable_global" model="ir.ui.view">
            <field name="name">view_stock_quant_tree_inventory_editable.global</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_tree_inventory_editable"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_apply_inventory']" position="attributes">
                    <attribute name="groups">globalstar_customization.group_confirm_adjustment_globalstar</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_users_form_global" model="ir.ui.view">
            <field name="name">view_users_form.global</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="sale_stock.res_users_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//group[@name='Warehouses']" position="inside">
                    <field name="stock_warehouse_ids" widget="many2many_tags"/>
                </xpath>

                <xpath expr="//group[@name='Warehouses']" position="after">
                    <group name="accounting" string="Accounting">
                        <field name="account_journal_ids" widget="many2many_tags"/>
                    </group>
                </xpath>

            </field>
        </record>

        <record id="view_account_journal_form_global" model="ir.ui.view">
            <field name="name">view_account_journal_form.global</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='account_control_ids']" position="after">
                    <field name="specific_users_ids" widget="many2many_tags"/>
                </xpath>

            </field>
        </record>

        <record id="view_account_payment_form_global" model="ir.ui.view">
            <field name="name">view_account_payment_form.global</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']" position="after">
                    <field name="allow_journal_ids" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='journal_id']" position="attributes">
                    <attribute name="domain">[('id', 'in', allow_journal_ids)]</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>