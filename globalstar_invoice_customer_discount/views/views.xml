<odoo>
    <data>

        <record id="view_account_form_global_inherit" model="ir.ui.view">
            <field name="name">view_account_form.global.inherit</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='allowed_journal_ids']" position="after">
                    <field name="customer_discount"/>
                </xpath>
            </field>
        </record>

        <record id="view_partner_form_global_customer_discount" model="ir.ui.view">
            <field name="name">view_partner_form_global_customer_discount</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="invoice_percentage"/>
                </xpath>
            </field>
        </record>

        <record id="view_account_journal_form_global_customer_discount" model="ir.ui.view">
            <field name="name">view_account_journal_form.global_customer_discount</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type']" position="after">
                    <field name="partner_discount"/>
                </xpath>
            </field>
        </record>

        <record id="view_account_move_inherit_global" model="ir.ui.view">
            <field name="name">account_move_inherit_global</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="git_invoice_partner_discount" icon="fa-warning" type="object" string="Customer Discount"
                            attrs="{'invisible': ['|', ('state', '!=', 'posted'), ('discount_move_id', '=', False)]}"/>
                    <field name="discount_move_id" invisible="1"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>