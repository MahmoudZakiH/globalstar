<odoo>
    <data>

        <record id="account_move_inherit_global_profit" model="ir.ui.view">
            <field name="name">account.move.global.profit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_unit']" position="after">
                    <field name="product_cost" optional="show"/>
                    <field name="product_total_cost" optional="show"/>
                    <field name="product_profit" optional="show"/>
                    <field name="product_total_profit" optional="show"/>
                </xpath>

                <xpath expr="//page[@id='other_tab_entry']" position="after">
                    <page id="invoice_profit" string="Profit" name="invoice_profit">
                        <group>
                            <group>
                                <field name="total_products_cost"/>
                            </group>
                            <group>
                                <field name="total_profit"/>
                            </group>
                        </group>
                    </page>
                </xpath>

            </field>
        </record>

        <record id="account_move_line_global_profit_tree" model="ir.ui.view">
            <field name="name">account_move_line.global_profit_tree</field>
            <field name="model">account.move.line</field>
            <field name="arch" type="xml">
                <tree edit='false' create='false' delete='false'>
                    <field name="move_id" optional="show" string="Invoice"/>
                    <field name="date" optional="show"/>
                    <field name="partner_id" optional="show"/>
                    <field name="invoice_date_due" optional="show"/>
                    <field name="invoice_user_id" optional="show"/>
                    <field name="product_id"/>
                    <field name="quantity" optional="show"/>
                    <field name="price_unit" optional="show"/>
                    <field name="price_subtotal" optional="show"/>
                    <field name="product_cost" optional="show"/>
                    <field name="product_total_cost" optional="show"/>
                    <field name="product_profit" optional="show"/>
                    <field name="product_total_profit" optional="show"/>
                </tree>
            </field>
        </record>

        <record id="account_move_line_report_view_pivot" model="ir.ui.view">
            <field name="name">account.move.line.report.pivot</field>
            <field name="model">account.move.line</field>
            <field name="priority">99</field>
            <field name="arch" type="xml">
                <pivot string="Move Lines" sample="1">
                    <field name="product_id" type="row"/>
                    <field name="date" type="col"/>
                    <field name="quantity" type="measure"/>
                    <field name="price_unit" type="measure"/>
                    <field name="price_subtotal" type="measure"/>
                    <field name="product_cost" type="measure"/>
                    <field name="product_total_cost" type="measure"/>
                    <field name="product_profit" type="measure"/>
                    <field name="product_total_profit" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="view_account_move_line_filter_report" model="ir.ui.view">
            <field name="name">account.move.line.search.report</field>
            <field name="model">account.move.line</field>
            <field name="arch" type="xml">
                <search string="Search Journal Items">
                    <field name="name" string="Journal Item" filter_domain="[
                        '|', '|', '|',
                        ('name', 'ilike', self), ('ref', 'ilike', self), ('account_id', 'ilike', self), ('partner_id', 'ilike', self)]"/>
                    <field name="date"/>
                    <field name="account_id"/>
                    <field name="account_root_id"/>
                    <field name="account_internal_type"/>
                    <field name="partner_id"/>
                    <field name="journal_id"/>
                    <field name="move_id" string="Journal Entry" filter_domain="[
                        '|', '|', ('move_id.name', 'ilike', self), ('move_id.ref', 'ilike', self), ('move_id.partner_id', 'ilike', self)]"/>
                    <field name="tax_ids" />
                    <field name="tax_line_id" string="Originator Tax"/>
                    <field name="reconcile_model_id"/>
                    <separator/>
                    <filter string="Unposted" name="unposted" domain="[('parent_state', '=', 'draft')]" help="Unposted Journal Items"/>
                    <filter string="Posted" name="posted" domain="[('parent_state', '=', 'posted')]" help="Posted Journal Items"/>
                    <separator/>
                    <filter string="To Check" name="to_check" domain="[('move_id.to_check', '=', True)]"/>
                    <separator/>
                    <filter string="Unreconciled" domain="[('full_reconcile_id', '=', False), ('balance', '!=', 0), ('account_id.reconcile', '=', True)]" help="Journal items where matching number isn't set" name="unreconciled"/>
                    <separator/>
                    <filter string="Sales" name="sales" domain="[('journal_id.type', '=', 'sale')]" context="{'default_journal_type': 'sale'}"/>
                    <filter string="Purchases" name="purchases" domain="[('journal_id.type', '=', 'purchase')]" context="{'default_journal_type': 'purchase'}"/>
                    <filter string="Bank" name="bank" domain="[('journal_id.type', '=', 'bank')]" context="{'default_journal_type': 'bank'}"/>
                    <filter string="Cash" name="cash" domain="[('journal_id.type', '=', 'cash')]" context="{'default_journal_type': 'cash'}"/>
                    <filter string="Miscellaneous" domain="[('journal_id.type', '=', 'general')]" name="misc_filter" context="{'default_journal_type': 'general'}"/>
                    <separator/>
                    <filter string="Payable" domain="[('account_id.internal_type', '=', 'payable')]" help="From Payable accounts" name="payable"/>
                    <filter string="Receivable" domain="[('account_id.internal_type', '=', 'receivable')]" help="From Receivable accounts" name="receivable"/>
                    <separator/>
                    <filter string="Date" name="date" date="date"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Invoice" name="group_by_move" domain="[]" context="{'group_by': 'move_id'}"/>
                        <filter string="Date" name="groupby_date" domain="[]" context="{'group_by': 'date'}"/>
                        <filter string="Partner" name="group_by_partner" domain="[]" context="{'group_by': 'partner_id'}"/>
                        <filter string="Sales Person" name="group_by_invoice_user_id" domain="[]" context="{'group_by': 'invoice_user_id'}"/>
                        <filter string="Product" name="group_by_product" domain="[]" context="{'group_by': 'product_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="account_move_line_global_profit_action" model="ir.actions.act_window">
            <field name="name">Move Lines</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.move.line</field>
            <field name="view_mode">tree,pivot</field>
            <field name="search_view_id" ref="view_account_move_line_filter_report"/>
            <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('account_move_line_global_profit_tree')}),
            (0, 0, {'view_mode': 'pivot', 'view_id': ref('account_move_line_report_view_pivot')})]"/>
            <field name="domain">[('move_type','=','out_invoice'), ('product_id','!=',False),
                ('exclude_from_invoice_tab', '=', False), ('state', '=', 'posted')]
            </field>
        </record>

        <menuitem id="account_move_line_global_profit_menu" name="Move Lines" parent="account.menu_finance_receivables"
                  action="account_move_line_global_profit_action" sequence="999"/>

    </data>
</odoo>