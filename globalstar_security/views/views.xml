<odoo>
    <data>

        <record id="sale_order_global_inherit" model="ir.ui.view">
            <field name="name">Sale Order GlobalStar</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_confirm'][1]" position="attributes">
                    <attribute name="groups">globalstar_security.group_confirm_order_globalstar</attribute>
                </xpath>
                <xpath expr="//button[@name='action_confirm'][2]" position="attributes">
                    <attribute name="groups">globalstar_security.group_confirm_order_globalstar</attribute>
                </xpath>
            </field>
        </record>

        <record id="stock_scrap_form_view_global" model="ir.ui.view">
            <field name="name">stock_scrap_form_view.global</field>
            <field name="model">stock.scrap</field>
            <field name="inherit_id" ref="stock.stock_scrap_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_validate']" position="attributes">
                    <attribute name="groups">globalstar_security.group_confirm_scrap_globalstar</attribute>
                </xpath>
            </field>
        </record>


        <record id="view_stock_quant_tree_inventory_editable_global" model="ir.ui.view">
            <field name="name">view_stock_quant_tree_inventory_editable.global</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_tree_inventory_editable"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_apply_inventory']" position="attributes">
                    <attribute name="groups">globalstar_security.group_confirm_adjustment_globalstar</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>